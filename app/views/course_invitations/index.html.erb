<h1>Listing course_invitations</h1>

<table>
  <thead>
    <tr>
      <th>Invitedbyuser</th>
      <th>Inviteduser</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @course_invitations.each do |course_invitation| %>
      <tr>
        <td><%= course_invitation.invitedbyuser.facebookid %></td>
        <td><%= course_invitation.inviteduser.facebookid %></td>
        <td><%= course_invitation.course.name %></td>
        <td><%= link_to 'Show', course_invitation %></td>
        <td><%= link_to 'Edit', edit_course_invitation_path(course_invitation) %></td>
        <td><%= link_to 'Destroy', course_invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to course', course_path(@course) %>
<%= link_to 'New Course Student', new_course_course_invitation_path(@course) %>
