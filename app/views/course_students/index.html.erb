<h1>Listing course_students</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @course_students.each do |course_student| %>
      <tr>
        <td><%= course_student.user.facebookid %></td>
        <td><%= course_student.course.name %></td>
        <td><%= link_to 'Show', course_student %></td>
        <td><%= link_to 'Edit', edit_course_student_path(course_student) %></td>
        <td><%= link_to 'Destroy', course_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Back to course', course_path(@course) %>
<%= link_to 'New Course Student', new_course_course_student_path(@course) %>
