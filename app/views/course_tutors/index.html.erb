<h1>Listing course_tutors</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @course_tutors.each do |course_tutor| %>
      <tr>
        <td><%= course_tutor.user.facebookid %></td>
        <td><%= course_tutor.course.name %></td>
        <td><%= link_to 'Show', course_tutor %></td>
        <td><%= link_to 'Edit', edit_course_tutor_path(course_tutor) %></td>
        <td><%= link_to 'Destroy', course_tutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Back to course', course_path(@course) %>
